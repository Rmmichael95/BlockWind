{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "title": "BW Catppuccin Mocha",
  "settings": {
    "color": {
      "palette": [
        {
          "name": "BW Primary",
          "slug": "bw-primary",
          "color": "#cba6f7"
        },
        {
          "name": "BW Secondary",
          "slug": "bw-secondary",
          "color": "#181825"
        },
        {
          "name": "BW Base",
          "slug": "bw-base",
          "color": "#1e1e2e"
        },
        {
          "name": "BW Accent",
          "slug": "bw-accent",
          "color": "#89b4fa"
        },
        {
          "name": "BW Link",
          "slug": "bw-link",
          "color": "#89b4fa"
        },
        {
          "name": "BW Text",
          "slug": "bw-text",
          "color": "#cdd6f4"
        },
        {
          "name": "BW Muted",
          "slug": "bw-muted",
          "color": "#a6adc8"
        },
        {
          "name": "BW Border",
          "slug": "bw-border",
          "color": "#313244"
        },
        {
          "name": "BW Contrast",
          "slug": "bw-contrast",
          "color": "#1e1e2e"
        },
        {
          "name": "BW Black",
          "slug": "bw-black",
          "color": "#000000"
        },
        {
          "name": "BW White",
          "slug": "bw-white",
          "color": "#ffffff"
        }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var:preset|color|bw-base",
      "text": "var:preset|color|bw-text"
    },
    "border": {
      "color": "var:preset|color|bw-border"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var:preset|color|bw-link"
        },
        ":hover": {
          "color": {
            "text": "var:preset|color|bw-primary"
          }
        },
        ":active": {
          "color": {
            "text": "var:preset|color|bw-primary"
          }
        }
      },
      "button": {
        "color": {
          "background": "var:preset|color|bw-accent",
          "text": "var:preset|color|bw-contrast"
        },
        ":hover": {
          "color": {
            "background": "var:preset|color|bw-primary",
            "text": "var:preset|color|bw-contrast"
          }
        }
      }
    },
    "blocks": {
      "core/navigation": {
        "elements": {
          "link": {
            "color": {
              "text": "var:preset|color|bw-text"
            },
            ":hover": {
              "color": {
                "text": "var:preset|color|bw-link"
              }
            },
            ":active": {
              "color": {
                "text": "var:preset|color|bw-primary"
              }
            }
          }
        }
      },
      "core/separator": {
        "color": {
          "background": "var:preset|color|bw-border"
        }
      },
      "core/site-tagline": {
        "color": {
          "text": "var:preset|color|bw-muted"
        }
      }
    }
  }
}