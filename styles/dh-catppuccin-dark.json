{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "title": "DH Catppuccin Mocha",
  "settings": {
    "color": {
      "palette": [
        {
          "name": "DH Primary",
          "slug": "dh-primary",
          "color": "#cba6f7"
        },
        {
          "name": "DH Secondary",
          "slug": "dh-secondary",
          "color": "#181825"
        },
        {
          "name": "DH Base",
          "slug": "dh-base",
          "color": "#1e1e2e"
        },
        {
          "name": "DH Accent",
          "slug": "dh-accent",
          "color": "#89b4fa"
        },
        {
          "name": "DH Link",
          "slug": "dh-link",
          "color": "#89b4fa"
        },
        {
          "name": "DH Text",
          "slug": "dh-text",
          "color": "#cdd6f4"
        },
        {
          "name": "DH Muted",
          "slug": "dh-muted",
          "color": "#a6adc8"
        },
        {
          "name": "DH Border",
          "slug": "dh-border",
          "color": "#313244"
        },
        {
          "name": "DH Contrast",
          "slug": "dh-contrast",
          "color": "#1e1e2e"
        },
        {
          "name": "DH Black",
          "slug": "dh-black",
          "color": "#000000"
        },
        {
          "name": "DH White",
          "slug": "dh-white",
          "color": "#ffffff"
        }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var:preset|color|dh-base",
      "text": "var:preset|color|dh-text"
    },
    "border": {
      "color": "var:preset|color|dh-border"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var:preset|color|dh-link"
        },
        ":hover": {
          "color": {
            "text": "var:preset|color|dh-primary"
          }
        },
        ":active": {
          "color": {
            "text": "var:preset|color|dh-primary"
          }
        }
      },
      "button": {
        "color": {
          "background": "var:preset|color|dh-accent",
          "text": "var:preset|color|dh-contrast"
        },
        ":hover": {
          "color": {
            "background": "var:preset|color|dh-primary",
            "text": "var:preset|color|dh-contrast"
          }
        }
      }
    },
    "blocks": {
      "core/navigation": {
        "elements": {
          "link": {
            "color": {
              "text": "var:preset|color|dh-text"
            },
            ":hover": {
              "color": {
                "text": "var:preset|color|dh-link"
              }
            },
            ":active": {
              "color": {
                "text": "var:preset|color|dh-primary"
              }
            }
          }
        }
      },
      "core/separator": {
        "color": {
          "background": "var:preset|color|dh-border"
        }
      },
      "core/site-tagline": {
        "color": {
          "text": "var:preset|color|dh-muted"
        }
      }
    }
  }
}
