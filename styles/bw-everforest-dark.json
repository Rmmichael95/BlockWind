{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "title": "BW Everforest Dark",
  "settings": {
    "color": {
      "palette": [
        {
          "name": "BW Primary",
          "slug": "bw-primary",
          "color": "#141e1c"
        },
        {
          "name": "BW Secondary",
          "slug": "bw-secondary",
          "color": "#1f2d2b"
        },
        {
          "name": "BW Base",
          "slug": "bw-base",
          "color": "#1E2326"
        },
        {
          "name": "BW Accent",
          "slug": "bw-accent",
          "color": "#d3a300"
        },
        {
          "name": "BW Link",
          "slug": "bw-link",
          "color": "#a7c080"
        },
        {
          "name": "BW Text",
          "slug": "bw-text",
          "color": "#d3c6aa"
        },
        {
          "name": "BW Muted",
          "slug": "bw-muted",
          "color": "#859289"
        },
        {
          "name": "BW Border",
          "slug": "bw-border",
          "color": "#2f383e"
        },
        {
          "name": "BW Contrast",
          "slug": "bw-contrast",
          "color": "#fffbef"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "name": "Body",
          "slug": "bw-body",
          "fontFamily": "ui-sans-serif, system-ui, -apple-system, \"Segoe UI\", Roboto, Helvetica, Arial, \"Apple Color Emoji\", \"Segoe UI Emoji\""
        },
        {
          "name": "Headings",
          "slug": "bw-heading",
          "fontFamily": "ui-sans-serif, system-ui, -apple-system, \"Segoe UI\", Roboto, Helvetica, Arial, \"Apple Color Emoji\", \"Segoe UI Emoji\""
        }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var:preset|color|bw-base",
      "text": "var:preset|color|bw-text"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var:preset|color|bw-link"
        },
        ":hover": {
          "color": {
            "text": "var:preset|color|bw-accent"
          }
        },
        ":active": {
          "color": {
            "text": "var:preset|color|bw-accent"
          }
        }
      },
      "button": {
        "color": {
          "background": "var:preset|color|bw-accent",
          "text": "var:preset|color|bw-primary"
        }
      }
    },
    "border": {
      "color": "var:preset|color|bw-border"
    }
  }
}